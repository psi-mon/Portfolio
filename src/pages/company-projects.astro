---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/Container.astro';
import ProjectCard from '@/components/ui/ProjectCard.astro';
import { getCollection } from 'astro:content';

const seo = {
  title: 'Company Projects - Simon Plutz',
  description: 'Professional projects and work developed during my career in software engineering',
  type: 'website',
  keywords: 'company projects, professional work, software engineering, development',
};

const allProjects = await getCollection('projects');
const projects = allProjects
  .filter(({ id }) => id.startsWith('company/'))
  .sort((a, b) => b.data.year - a.data.year);

// Debug: log what we're getting
console.log('All projects:', allProjects.map(p => ({ id: p.id, title: p.data.title })));
console.log('Company projects:', projects.map(p => ({ id: p.id, title: p.data.title })));
---

<BaseLayout seo={seo}>
  <Container as="section" class="py-6">
    <div class="flex flex-col gap-6">
      <div class="flex items-center gap-4">
        <a href="/projects" class="text-headings hover:text-headings/80 transition-colors">‚Üê Back to Projects</a>
        <span class="text-headings text-3xl font-bold">Company Projects</span>
      </div>
      <div class="prose dark:prose-invert">
        <p class="text-muted-foreground text-lg">
          A showcase of professional projects developed during my career in software engineering, 
          spanning game development, mobile applications, and enterprise solutions.
        </p>
      </div>
    </div>
  </Container>

  <Container as="section" class="py-6">
    <div class="flex flex-col gap-8">
      <!-- Projects -->
      {projects.map((project) => (
        <ProjectCard 
          title={project.data.title}
          description={project.data.description}
          year={project.data.year}
          responsibilities={project.data.responsibilities}
          techStack={project.data.techStack}
          featureImage={project.data.featureImage}
          galleryImages={project.data.galleryImages}
          videoUrl={project.data.videoUrl}
        />
      ))}

      <!-- Professional Achievements -->
      <div class="border border-border rounded-lg p-6 bg-muted-foreground/5">
        <h3 class="text-xl font-semibold text-headings mb-4">Professional Achievements</h3>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">15+</div>
            <div class="text-sm text-muted-foreground">Games Built</div>
          </div>
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">6</div>
            <div class="text-sm text-muted-foreground">Platforms</div>
          </div>
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">500K+</div>
            <div class="text-sm text-muted-foreground">Downloads</div>
          </div>
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">15+</div>
            <div class="text-sm text-muted-foreground">Years</div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</BaseLayout>
