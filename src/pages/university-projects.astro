---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/Container.astro';
import ProjectCard from '@/components/ui/ProjectCard.astro';
import { getCollection } from 'astro:content';

const seo = {
  title: 'University Projects - Simon Plutz',
  description: 'Academic projects and research work from my university studies in computer science and game development',
  type: 'website',
  keywords: 'university projects, academic work, research, game development, computer science',
};

const allProjects = await getCollection('projects');
const projects = allProjects.filter(({ id }) => id.startsWith('university/'));

// Debug: log what we're getting
console.log('All projects:', allProjects.map(p => ({ id: p.id, title: p.data.title })));
console.log('University projects:', projects.map(p => ({ id: p.id, title: p.data.title })));
---

<BaseLayout seo={seo}>
  <Container as="section" class="py-6">
    <div class="flex flex-col gap-6">
      <div class="flex items-center gap-4">
        <a href="/projects" class="text-headings hover:text-headings/80 transition-colors">‚Üê Back to Projects</a>
        <span class="text-headings text-3xl font-bold">University Projects</span>
      </div>
      <div class="prose dark:prose-invert">
        <p class="text-muted-foreground text-lg">
          Academic projects and research work from my university studies, showcasing my journey in computer science 
          and game development from foundational concepts to advanced implementations.
        </p>
      </div>
    </div>
  </Container>

  <Container as="section" class="py-6">
    <div class="flex flex-col gap-8">
      <!-- Projects -->
      {projects.map((project) => (
        <ProjectCard 
          title={project.data.title}
          description={project.data.description}
          responsibilities={project.data.responsibilities}
          techStack={project.data.techStack}
          featureImage={project.data.featureImage}
          galleryImages={project.data.galleryImages}
          videoUrl={project.data.videoUrl}
        />
      ))}

      <!-- Academic Achievements -->
      <div class="border border-border rounded-lg p-6 bg-muted-foreground/5">
        <h3 class="text-xl font-semibold text-headings mb-4">Academic Achievements</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">2</div>
            <div class="text-sm text-muted-foreground">Degrees</div>
          </div>
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">3+</div>
            <div class="text-sm text-muted-foreground">Major Projects</div>
          </div>
          <div class="text-center p-4 border border-border rounded-lg">
            <div class="text-2xl font-bold text-headings">6</div>
            <div class="text-sm text-muted-foreground">Years</div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</BaseLayout>
