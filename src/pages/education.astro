---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/Container.astro';

const seo = {
  title: 'Education - Simon Plutz',
  description: 'Educational background and academic achievements of Simon Plutz, Senior Software Engineer',
  type: 'website',
  keywords: 'education, academic background, university, software engineering',
};
---

<BaseLayout seo={seo}>
  <Container as="section" class="py-6">
    <div class="flex flex-col gap-6">
      <div class="flex items-center">
        <span class="text-headings text-3xl font-bold">Education</span>
      </div>
      <div class="prose dark:prose-invert">
        <p class="text-muted-foreground text-lg">
          My academic journey and educational background in software engineering and computer science.
        </p>
      </div>
    </div>
  </Container>

  <Container as="section" class="py-6">
    <div class="flex flex-col gap-8">
      <!-- University Education -->
      <div class="border border-border rounded-lg p-6">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
          <div>
            <h3 class="text-xl font-semibold text-headings">Bachelor of Computer Science</h3>
            <p class="text-muted-foreground">Software Engineering & Game Development</p>
            <p class="text-sm text-muted-foreground">Technical University of Munich</p>
          </div>
          <div class="text-right mt-2 md:mt-0">
            <span class="text-sm text-muted-foreground">2010 - 2014</span>
          </div>
        </div>
        <p class="text-muted-foreground mb-4">
          Studied computer science with focus on software engineering, algorithms, and system design. 
          Completed various projects including game development, web applications, and research work.
        </p>
        <div class="flex flex-wrap gap-2">
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Computer Science</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Software Engineering</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Algorithms</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">System Design</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Game Development</span>
        </div>
      </div>

      <!-- Certifications -->
      <div class="border border-border rounded-lg p-6">
        <h3 class="text-xl font-semibold text-headings mb-4">Certifications & Training</h3>
        <div class="space-y-4">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
              <h4 class="font-medium text-headings">Unity3D Game Development Certification</h4>
              <p class="text-muted-foreground text-sm">Advanced game development techniques and optimization</p>
            </div>
            <span class="text-sm text-muted-foreground mt-1 md:mt-0">2022</span>
          </div>
          
          <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
              <h4 class="font-medium text-headings">Mobile App Development Workshop</h4>
              <p class="text-muted-foreground text-sm">Cross-platform development with React Native</p>
            </div>
            <span class="text-sm text-muted-foreground mt-1 md:mt-0">2021</span>
          </div>

          <div class="flex flex-col md:flex-row md:items-center md:justify-between">
            <div>
              <h4 class="font-medium text-headings">Web Development Bootcamp</h4>
              <p class="text-muted-foreground text-sm">Modern web technologies and frameworks</p>
            </div>
            <span class="text-sm text-muted-foreground mt-1 md:mt-0">2020</span>
          </div>
        </div>
      </div>

      <!-- Skills & Technologies -->
      <div class="border border-border rounded-lg p-6">
        <h3 class="text-xl font-semibold text-headings mb-4">Technical Skills</h3>
        <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">JavaScript</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">TypeScript</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">React</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Node.js</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Python</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Unity3D</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">C#</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Git</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Docker</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">AWS</span>
          <span class="px-3 py-1 bg-headings/10 text-headings rounded-full text-sm">Firebase</span>
        </div>
      </div>

      <!-- Academic Achievements -->
      <div class="border border-border rounded-lg p-6">
        <h3 class="text-xl font-semibold text-headings mb-4">Academic Achievements</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <span class="w-2 h-2 bg-green-500 rounded-full"></span>
            <span class="text-sm text-muted-foreground">Graduated with Distinction (1.3 GPA)</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="w-2 h-2 bg-blue-500 rounded-full"></span>
            <span class="text-sm text-muted-foreground">Published 3 research papers on game AI</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="w-2 h-2 bg-purple-500 rounded-full"></span>
            <span class="text-sm text-muted-foreground">Led student game development team</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="w-2 h-2 bg-yellow-500 rounded-full"></span>
            <span class="text-sm text-muted-foreground">Best Final Project Award</span>
          </div>
        </div>
      </div>
    </div>
  </Container>
</BaseLayout>
